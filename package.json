{
  "name": "shopify-mock",
  "version": "1.0.0",
  "description": "Standalone Shopify GraphQL API mock service for local development",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "ts-node src/main.ts",
    "build": "tsc",
    "typeorm": "typeorm",
    "migration:generate": "typeorm migration:generate -d src/database/data-source.ts src/database/migrations/$name",
    "migration:run": "typeorm migration:run -d src/database/data-source.ts",
    "migration:revert": "typeorm migration:revert -d src/database/data-source.ts",
    "seed": "ts-node src/database/seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.9",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.9",
    "@nestjs/platform-express": "^11.0.9",
    "@nestjs/swagger": "^11.0.3",
    "@nestjs/typeorm": "^11.0.0",
    "axios": "^1.7.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "express": "^4.18.2",
    "@faker-js/faker": "^8.4.1",
    "pg": "^8.13.3",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.20",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.13.4",
    "typescript": "^5.7.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  }
}
